@model IEnumerable<SPU.ViewModels.MdsDetailVM>

@{
    ViewData["Title"] = "Gestion des maîtres de stage";

}

<link rel="stylesheet" href="~/css/user.css" />

<h1 class="mt-3">Gérer les maîtres de stage<br></h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.UserListErrorMessage))
{
    <div class="alert alert-danger">
        @Html.Raw(ViewBag.UserListErrorMessage)
    </div>
}

@* @Html.ValidationSummary(true, "", new { @class = "text-danger" }) *@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                Horaire
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                   @Html.ActionLink("Horaire", "HoraireMds", "Horaire", new { userId = item.Id }, new { @class = "btn horaire-btn" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    
}
