@* Maitre de stage *@
<table class="table">
    <thead>
        <tr>
            <th>
                Matricule
            </th>
            <th>
                Nom
            </th>
            <th>
                Prénom
            </th>
            <th>
                Email
            </th>
            <th>
                Téléphone
            </th>
            <th>
                Détails
            </th>
            <th>
                Horaire
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tr>
        <td colspan="10" class="bg-dark text-white" onclick="userDisplay('displayMds')">Maître de stage <button class="btn btn-primary copy-link" data-link="@GetLinkForRole("MDS")">Copier lien</button></td>
    </tr>
    <tbody id="displayMds" class="">
        @foreach (var item in Model)
        {
            @if (item.role == "MDS")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matricule)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prenom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Courriel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        <i class="faa fa-solid fa-user" style="color: #2386d1;" onclick='userDetails(@Html.Raw(Json.Serialize(item)))'></i>
                    </td>
                    <td>
                        horaire
                    </td>
                    <td>
                        @Html.ActionLink("Mettre à jour", "EditMDS", "Compte", new { id = item.Id }, new { @class = "btn btn-primary" })
                        
                        <form asp-action="Remove" asp-route-id="@item.Id" asp-route-role="@item.role" class="d-inline-block">
                            <button type="button" class="btn btn-danger delete-button" data-nom="@item.Nom" data-prenom="@item.Prenom">
                                Supprimer
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


