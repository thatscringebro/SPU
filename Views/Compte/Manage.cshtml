@model IEnumerable<SPU.ViewModels.UtilisateurDetailVM>

@{
    ViewData["Title"] = "Gestion Utilisateurs";

}

<h1>Gérer les utilisateurs<br></h1>

<div class="mt-2 mb-2">
    @Html.ActionLink("Créer un nouvel utilisateur", "ChoixCreation", "Compte",
            new { }, new { @class = "btn btn-primary" })
</div>

<div class="mt-2 mb-2">
    @Html.ActionLink("Effectuer des liaisons", "Relier", "Compte",
            new { }, new { @class = "btn btn-primary" })
</div>

@if (!string.IsNullOrEmpty(ViewBag.UserListErrorMessage))
{
    <div class="alert alert-danger">
        @Html.Raw(ViewBag.UserListErrorMessage)
    </div>
}

@* @Html.ValidationSummary(true, "", new { @class = "text-danger" }) *@
<table class="table">
    <thead>
        <tr>
            <th>
                Rôle
            </th>
            <th>
                Nom
            </th>
            <th>
                Prénom
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in new List<string> { "Stagiaire", "MDS", "Enseignant", "Employeur", "Coordonnateur" })
        {
            <tr>
                <td colspan="4" class="bg-dark text-white">@role</td>
            </tr>
            @foreach (var item in Model.Where(x => x.role == role))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.role)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prenom)
                    </td>
                    <td>
                        @if (item.role == "MDS")
                        {
                            @Html.ActionLink("Modifier", "EditMDS", "Compte", new { id = item.Id }, new { @class = "btn btn-primary" })
                        }
                        else if (item.role == "Employeur")
                        {
                            @Html.ActionLink("Modifier", "EditEmployeur", "Compte", new { id = item.Id }, new { @class = "btn btn-primary" })
                        }
                        else
                        {
                            @Html.ActionLink("Modifier", "EditUtilisateur", "Compte", new { id = item.Id }, new { @class = "btn btn-primary" })
                        }
                        <form asp-action="Remove" asp-route-id="@item.Id" asp-route-role="@item.role" class="d-inline-block">
                            <button type="button" class="btn btn-danger delete-button" data-nom="@item.Nom" data-prenom="@item.Prenom">
                                Supprimer
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(function() {
            $('.delete-button').click(function() {
                const nomComplet = $(this).data('prenom') + ' ' + $(this).data('nom') || "this item";

                const message = `Voulez-vous vraiment supprimer ${nomComplet}?`;

                if(confirm(message)) {
                    $(this).parent("form").submit();
                }
            });
        });
    </script>
}
