@section Scripts {
    <script>
        function userDetails(user) {
            console.log(user);
            let userDetailsHtml = `
            <span>Nom:</span> ${user.Nom}<br>
            <span>Prénom:</span> ${user.Prenom}<br>
            <span>Email:</span> ${user.Courriel}<br>
            <span>Téléphone:</span> ${user.Telephone}<br>
        `;

            if (user.role === "MDS") {
                userDetailsHtml += `
                    <span>Matricule:</span> ${user.Matricule}<br>
                `;
            }
            // if (user.role === "Employeur") {
            // userDetails.html += `
            //                     <span>Nom:</span> ${user.Matricule}<br>

            //                 `
            // }

            Swal.fire({
                icon: "info",
                title: "Détails de l'utilisateur",
                image: "/images/user_icon.png",
                text: "Hi!",
                html: userDetailsHtml
            });

        }


        /* displayEmp, displaySt, displayMds, displayEns */

        function userDisplay(ObjHiddenId) {
            var cls = document.getElementById(ObjHiddenId);
            if (cls.className === "hidden") { 
                cls.className = "";
            }
            else
            {
                cls.className = "hidden";
            }
        }


        $(function () {
            $('.delete-button').click(function () {
                const nomComplet = $(this).data('prenom') + ' ' + $(this).data('nom') || "this item";

                const message = `Voulez-vous vraiment supprimer ${nomComplet}?`;

                if (confirm(message)) {
                    $(this).parent("form").submit();
                }
            });

            $('.copy-link').click(function () {
                const link = $(this).data('link');
                const tempInput = $('<input>');
                $('body').append(tempInput);
                tempInput.val(link).select();
                document.execCommand('copy');
                tempInput.remove();
                alert('Le lien a été copié.');
            });
        });

       
    </script>
}
