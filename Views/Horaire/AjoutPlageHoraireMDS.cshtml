@using SPU.ViewModels
@model PlageHoraireMdsVM

@{
    ViewData["Title"] = "Ajout Plage horaire Maître de stage";
}

<style>
    .plagehorairemds-fullpage-class {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .plagehorairemds-fullpage-class::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("/images/pexels-denniz-futalan-3452997.jpg");
        background-size: cover;
        filter: blur(12px);
        z-index: -1;
    }

    #horaire-ajoutplagehoraire-form-id {
        position: relative;
        margin: auto;
        border: 3px solid green;
        padding: 10px;
        max-width: 500px;
        background-color: white !important;
        z-index: 1;
    }

    .btn-pageHoraireMds-Confirmer {
        left: 8px;
    }

</style>

<div class="plagehorairemds-fullpage-class">
    <form id="horaire-ajoutplagehoraire-form-id" method="post" asp-controller="Horaire" asp-action="AjoutPlageHoraireMDS">
        <h1>Ajout d'une plage horaire</h1>
        
        <br />
        <hr>

        <div>
            <h2 style="font-size:20px;">Plage horaire début</h2>
        </div>
        <div>
            Date : <input class="form-control" type="date" asp-for="DateDebutPlageHoraire" asp-format="{0:yyyy-MM-dd}" />
            <span asp-validation-for="DateDebutPlageHoraire" class="text-danger"></span>
            <span asp-validation-for="DateDebutPlageHoraire.Date" class="text-danger"></span>
            <span asp-validation-for="DateDebutPlageHoraire.Hour" class="text-danger"></span>
            <span asp-validation-for="DateDebutPlageHoraire.Minute" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <label for="heure">Heure :</label>
                <select asp-for="HeureDebutPlageHoraire" class="form-control">
                    @for (int i = 0; i < 24; i++)
                    {
                        <option value="@i">@i.ToString("00")</option>
                    }
                </select>
                <span asp-validation-for="HeureDebutPlageHoraire" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label for="minutes">Minutes :</label>
                <select asp-for="MinutesDebutPlageHoraire" class="form-control">
                    <option value="0">0</option>
                    <option value="15">15</option>
                    <option value="30">30</option>
                    <option value="45">45</option>
                </select>
                <span asp-validation-for="MinutesDebutPlageHoraire" class="text-danger"></span>
            </div>
        </div>
        <br />

        <div>
            <h2 style="font-size:20px;">Plage horaire fin</h2>
        </div>
        <div>
            Date : <input class="form-control" type="date" asp-for="DateFinPlageHoraire" asp-format="{0:yyyy-MM-dd}" />
            <span asp-validation-for="DateFinPlageHoraire" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <label for="heure">Heure :</label>
                <select asp-for="HeureFinPlageHoraire" class="form-control">
                    @for (int i = 0; i < 24; i++)
                    {
                        <option value="@i">@i.ToString("00")</option>
                    }
                </select>
                <span asp-validation-for="HeureFinPlageHoraire" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label for="minutes">Minutes :</label>
                <select asp-for="MinutesFinPlageHoraire" class="form-control">
                    <option value="00">0</option>
                    <option value="15">15</option>
                    <option value="30">30</option>
                    <option value="45">45</option>
                </select>
                <span asp-validation-for="MinutesFinPlageHoraire" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <label>
                <input id="horaire-ajoutplagehoraire-recurrence-checkbox" asp-for="Recurrence" type="checkbox" style="transform: scale(1.5);" />
                Ajout de récurrence
            </label>
            <a style="font-style: italic; font-size:14px">
                Ceci applique une récurrence de la plage horaire à toutes les deux semaines. Il sera possible de modifier ou supprimer des plages horaires manuellement pas la suite. 
            </a>
        </div>

        <br />
        <div class="row">
            <div class="col-6">
                <button type="submit" asp-action="Horaire" asp-controller="Horaire" asp-route-horaireId="@ViewBag.horaireId" class="btn btn-secondary btn-pageHoraireMds-Annuler">Annuler</button>
            </div>
            <div class="col-6">
                <button type="submit" asp-action="AjoutPlageHoraireMDS" asp-route-horaireId="@ViewBag.horaireId" asp-controller="Horaire" class="btn btn-primary btn-pageHoraireMds-Confirmer">Confirmer</button>
            </div>
        </div>
    </form>
</div>

