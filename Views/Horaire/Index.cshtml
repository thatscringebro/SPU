@using SPU.ViewModels

@model ListeHoraireVM

<br />
<form asp-controller="Horaire" asp-action="AjoutNouvelHoraireMDS" method="get">
    <button id="horaire-ajoutnouvelhorairemds-button" type="submit" class="btn btn-primary" style="font-size:20px;">Ajout nouvel horaire maître de stage</button>
</form>
<br />

<h1>Liste des horaires</h1>
<hr />
@if (Model.listeHoraireMds != null)
{
    @foreach (var item in Model.listeHoraireMds)
    {
        <div class="row">
            <div class="row" style="font-size:26px; font-weight: bold;">
                Choix de l'horaire :
            </div>
            <br />
            <div class="row" style="font-size:22px; ">
                <label>
                    Horaire du : @item.DateDebutStage.Date, au @item.DateFinStage
                </label>
            </div>
            <div class="row" id="horaire-listehoraire-id-@item.Id">
                <img class="submit" onclick="location.href ='@Url.Action("Horaire", "Horaire", new { horaireId = item.Id })'" src="/images/Horaire_miniature.png" style="width:200px" />
            </div>
        </div>
        <hr />
    }
}




