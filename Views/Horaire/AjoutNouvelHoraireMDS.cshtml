@using SPU.ViewModels
@model AjoutNouvelHoraireMdsVM

@{
    ViewData["Title"] = "Ajout nouvel horaire Maître de stage";
}

<style>
    .nouvelhorairemds-fullpage-class {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

   .nouvelhorairemds-fullpage-class::before {
       content: "";
       position: absolute;
       top: 0;
       left: 0;
       width: 100%;
       height: 100%;
       background-image: url("/images/pexels-denniz-futalan-3452997.jpg");
       background-size: cover;
       filter: blur(12px);
       z-index: -1;
   }

    form {
        position: relative;
        margin: auto;
        border: 3px solid green;
        padding: 10px;
        max-width: 500px;
        background-color: white !important;
        z-index: 1;
    }

    .btn-pageHoraireMds-Confirmer {
        margin-left: 120px;
    }

</style>

<div class="nouvelhorairemds-fullpage-class">
    <form method="post" asp-controller="Horaire" asp-action="AjoutNouvelHoraireMDS">
        <h1>Ajout d'un nouvel horaire</h1>
        <div>
            <a>
                Veillez choisir la date de début et fin du stage afin de créer l'horaire
            </a>
            <div style="font-style: italic; font-size:14px">
                (Il sera possible de modifier manuellement chaque plage horaire par la suite)
            </div>
        </div>
        <div>
            <div style="font-size:18px">
                Selection de la date du début du stage :
            </div>
            <input class="form-control" type="date" asp-for="DateTimeDebutStage" asp-format="{0:yyyy-MM-ddTHH:mm}" />
        </div>
        <br />
        <div>
            <div style="font-size:18px">
                Selection de la date de fin du stage :
            </div>
            <input class="form-control" type="date" asp-for="DateTimeFinStage" asp-format="{0:yyyy-MM-ddTHH:mm}" />
        </div>
        <hr>

        <div class="row">
            <div class="col-6">
                <button type="submit" asp-action="Index" asp-controller="Horaire" class="btn btn-secondary btn-pageHoraireMds-Annuler">Annuler</button>
            </div>
            <div class="col-6">
                <button type="submit" asp-action="Horaire" asp-controller="Horaire" class="btn btn-primary btn-pageHoraireMds-Confirmer">Confirmer</button>
            </div>
        </div>
    </form>
</div>

